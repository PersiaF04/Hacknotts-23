MDScreen:
    name: "TSPLogin"
    MDFloatLayout:
        id: login_layout
        md_bg_color:  114/255, 228/255, 57/255, 1

    Image:
        source: "Assets/edit2.png"
        size_hint: .36, .36
        pos_hint: {"center_x": .16, "center_y": .8}
        
    MDLabel:
        text: "TheSoundProject"
        font_size: "32sp"
        pos_hint: {"center_x": .785, "center_y": .849}

    MDLabel:
        text: "Hacknotts '23"
        font_size: "18sp"
        color: 120/255, 120/255, 120/255, 1
        pos_hint: {"center_x": .825, "center_y": .790}

    MDTextField:
        id: input_username
        hint_text: "Enter Username here.."
        helper_text: ""
        helper_text_mode: "persistent"
        pos_hint: {"center_x": .5, "center_y": .52}
        size_hint_x: .85
        line_color_focus: 0,0,0,1

    MDTextField:
        id: input_password
        hint_text: "Enter password here.."
        helper_text: ""
        helper_text_mode: "persistent"
        pos_hint: {"center_x": .5, "center_y": .42}
        size_hint_x: .85
        line_color_focus: 0,0,0,1
        password: True

    MDTextButton:
        text: "forgotten password?"
        font_size: "9sp"
        haling: "center"
        color: 120/255, 120/255, 120/255, 1
        pos_hint: {"center_x": .715, "center_y": .370}

    MDFlatButton:
        text: "Log-in"
        size_hint: .79, .08
        pos_hint: {"center_x": .50, "center_y": .25}
        md_bg_color: 255/255, 255/255, 255/255, 1
        on_press: app.graph()

    